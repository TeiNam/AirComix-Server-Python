# Comix Server Configuration
# Copy this file to .env and modify as needed

# Server configuration
COMIX_MANGA_DIRECTORY=/path/to/your/manga/collection
COMIX_SERVER_PORT=31257
COMIX_SERVER_HOST=0.0.0.0

# Application settings
COMIX_DEBUG_MODE=false
COMIX_LOG_LEVEL=INFO

# File filtering (comma-separated lists)
COMIX_HIDDEN_FILES=.,..,.DS_Store,Thumbs.db,@eaDir
COMIX_HIDDEN_PATTERNS=__MACOSX

# Supported formats (comma-separated, without dots)
COMIX_IMAGE_EXTENSIONS=jpg,jpeg,gif,png,tif,tiff,bmp
COMIX_ARCHIVE_EXTENSIONS=zip,cbz,rar,cbr

# Performance settings
COMIX_MAX_FILE_SIZE=104857600  # 100MB in bytes
COMIX_CHUNK_SIZE=8192