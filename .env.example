# Comix Server 환경 설정 예제
# 실제 사용 시 .env 파일로 복사하여 수정하세요

# 서버 설정
COMIX_MANGA_DIRECTORY=/path/to/your/manga
COMIX_SERVER_PORT=31257
COMIX_SERVER_HOST=0.0.0.0
COMIX_DEBUG_MODE=false
COMIX_LOG_LEVEL=INFO

# 문자 인코딩 설정
COMIX_SOURCE_ENCODING=EUC-KR
COMIX_TARGET_ENCODING=UTF-8

# 서버 정보
COMIX_SERVER_NAME=Comix Server Python Port
COMIX_ALLOW_DOWNLOAD=true
COMIX_ALLOW_IMAGE_PROCESS=true